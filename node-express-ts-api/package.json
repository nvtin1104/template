{
  "name": "gamexamxam-api",
  "version": "1.0.0",
  "description": "Node.js Express TypeScript MongoDB API (module-based architecture)",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node --loader ts-node/esm src/server.ts",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.{ts,js}",
    "format": "prettier --write src/**/*.{ts,js}",
    "create": "node scripts/create-module.mjs"
  },
  "dependencies": {
    "express": "^4.19.2",
    "dotenv": "^16.4.5",
    "mongoose": "^8.6.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/express": "^4.17.21",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "typescript": "^5.6.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "nodemon": "^3.1.4",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
